@model ForgottenPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifrənin bərpası / Unibank</title>
    <link rel="icon" href="~/assets/image/apple-touch-icon.webp">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body class="resetpassword">
    <div class="nonresponsive_container">
        <div class="password_container">
            <!-- Header -->
            <header class="password_header">
                <div class="password_logo">
                    <a href="/home/index"><img src="~/assets/image/logo_unibank.png" alt=""></a>
                </div>
                <div class="password_lang">
                    <a href="#" class="selected_lang">AZE</a>
                    <a href="#">ENG</a>
                    <a href="#">RUS</a>
                </div>
            </header>
            <!-- End of the header -->
            <main>
                <section>
                    <div class="reset_content">
                        <h1>Şifrəni unutmusan?</h1>
                        <p>Qeydiyyatdan keçdiyiniz elektron-poçt hesabını daxil edərək sizə göndərilən linkdən şifrəni yeniləyə bilərsiniz</p>
                        <form action="" method="post">
                            <input asp-for="Email" type="email" required placeholder="Elektron-poçt hesabını daxil edin">
                            <button type="submit">Göndər</button>
                        </form>
                        <a asp-action="login">Şəxsi kabinet</a>
                    </div>
                </section>
            </main>
        </div>
    </div>
    <script src="~/assets/js/login.js"></script>
</body>
</html>