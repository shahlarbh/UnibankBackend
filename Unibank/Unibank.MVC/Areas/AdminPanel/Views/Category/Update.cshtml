
@{
    ViewData["Title"] = $"{Model.Name}";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@model Category

<div class="col-md-6 grid-margin stretch-card" style="width:80vw">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Service</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name">Category name</label>
                    <input asp-for="Name" class="form-control" placeholder="Category name">
                    <span asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>