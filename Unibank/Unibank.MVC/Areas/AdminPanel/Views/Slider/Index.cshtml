@{
    ViewData["Title"] = "Sliders";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@model List<Slider>

<div class="w-100">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Table</h4>
            <a class="btn btn-success" asp-controller="slider" asp-action="create">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Slider Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Url</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/assets/image/@item.SliderImage" style="width:100px; height:100px" /></td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Url</td>
                                <td>
                                    <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-warning" asp-action="details" asp-route-id="@item.Id">Details</a>
                                    <form asp-action="delete" method="post">
                                        <button type="submit" class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>