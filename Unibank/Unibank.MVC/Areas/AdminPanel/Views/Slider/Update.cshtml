@{
    ViewData["Title"] = $"{Model.Title}";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@model Slider

<div class="col-md-6 grid-margin stretch-card" style="width:80vw">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Slider</h4>
            <img src="~/assets/image/@Model.SliderImage" style="width:100px; height:100px" />
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Image">Slider Image</label>
                    <input asp-for="Image" class="form-control" placeholder="Slider Image" accept="image/*">
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Page Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Url">Page Url</label>
                    <input asp-for="Url" class="form-control" placeholder="Url">
                    <span asp-validation-for="Url"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>