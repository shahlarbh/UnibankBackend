@{
    ViewData["Title"] = $"{Model.Name}";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@model Section

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Section</h4>
            <p class="card-description">
                @Model.Name
            </p>
            @foreach (var item in Model.SectionBranches)
            {
                <p style="font-size:20px;"><i class="fa-solid fa-location-dot" style="margin-left:10px; margin-right:20px; color:red"></i>@item.Branch.Name</p>
            }
        </div>
    </div>
</div>